# This file is for unifying the coding style for different editors and IDEs
# See editorconfig.org
#
# Похоже, что здесь перечислены вообще все возможные свойства:
# https://github.com/remal/tracing-spec/blob/master/.editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 999
ij_visual_guides = 120
ij_formatter_tags_enabled = true
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_smart_tabs = false
ij_wrap_on_typing = false

[*.java]
tab_width = 4
indent_size = 4
ij_continuation_indent_size = 4
ij_java_class_count_to_use_import_on_demand = 999
ij_any_blank_lines_after_imports = 1
ij_any_blank_lines_after_package = 1
ij_java_keep_simple_classes_in_one_line = true
ij_java_space_before_array_initializer_left_brace = true
ij_java_imports_layout=ru.detmir.**,com.detmir.**,|,*,|,javax.**,java.**,|,$*

[{*.yml, *.yaml}]
tab_width = 2
indent_size = 2

[*.json]
tab_width = 2
indent_size = 2

[*.xml]
tab_width = 4
indent_size = 4
